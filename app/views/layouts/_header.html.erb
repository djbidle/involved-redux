<header class="blue">
  <div class="header-left is-pulled-left">
      <a href="/">
        <%= image_tag("logo.png", :alt => "Logo", :style => "height:8vh") %>
      </a>
  </div>
    <!-- Hamburger menu (on mobile) -->
  <span class="header-toggle is-pulled-right">
    <span></span>
    <span></span>
    <span></span>
  </span>

    <!-- Right side -->
  <div class="header-right header-menu is-pulled-right">
    <span class="header-item">
      <a href="#">Bills</a>
    </span>
    <span class="header-item">
      <a href="#">Trending</a>
    </span>
    <span class="header-item">
      <% if logged_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log Out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class='button'><%= link_to "Login", login_path %></li>
      <% end %>
     
      </span>  
  </div>
</header>