<% if @user.errors.any? %>
  <div class="message is-danger">
    <div class="message-header">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul class="message-body">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>